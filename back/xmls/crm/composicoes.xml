<?xml version="1.0" encoding="UTF-8"?>
<nsjusecase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../vendor/nasajon/mdatransformer/schemas/nsjusecase.xsd" name="composicoes" label="composicoes" project="crm">
    <entity schema="crm" table="composicoes">
        <fieldmodel name="composicao" datatype="guid" isid="true" column="composicao"/>
        <fieldmodel name="nome" datatype="string" column="nome"/>
        <fieldmodel name="descricao" datatype="string" column="descricao"/>
        <fieldmodel name="codigo" datatype="string" column="codigo"/>
        <fieldmodel name="created_at" datatype="datetime" column="created_at"/>
        <fieldmodel name="updated_at" datatype="datetime" column="updated_at"/>
        <fieldmodel name="created_by" datatype="json" column="created_by"/>
        <fieldmodel name="updated_by" datatype="json" column="updated_by" />
        <fieldmodel name="tenant" datatype="integer" column="tenant"/>
        <fieldmodel name="funcoes" datatype="objectlist"  column="composicao" useCaseLink="crm\composicoesfuncoes" entityJoinType="left"/>
        <fieldmodel name="familias" datatype="objectlist"  column="composicao" useCaseLink="crm\composicoesfamilias" entityJoinType="left"/>
        <fieldmodel name="servicotecnico" datatype="guid"  column="servicotecnico" useCaseLink="servicos\servicostecnicos" entityJoinType="left"/>
        <fieldmodel name="id_grupoempresarial" datatype="guid" column="grupoempresarial"/>
        <fieldmodel name="servicocoringa" datatype="boolean" column="servicocoringa"/>
        <fieldmodel name="servicoexterno" datatype="boolean" column="servicoexterno"/>
        <fieldmodel name="servicoprestadoraacionada" datatype="boolean" column="servicoprestadoraacionada"/>
        <fieldmodel name="itemfaturamento" datatype="guid" column="itemfaturamento" useCaseLink="servicos\itensdefaturamento" entityJoinType="left"/>
    </entity>
    <constructors>
      <constructoritem required="true">tenant</constructoritem>
      <constructoritem required="true">id_grupoempresarial</constructoritem>
    </constructors>
    <viewbrowser paginate="true" layout="list" target="builtin" label="Serviços">
        <fieldsbrowser>
            <fieldbrowser entitylink="composicao" visible="false" isid="true"/>
            <fieldbrowser alias="Nome" entitylink="nome" visible="true" cansearch="true"/>
            <fieldbrowser alias="Código" entitylink="codigo" visible="true" cansearch="true"/>
            <fieldbrowser alias="Descrição" entitylink="descricao" visible="true" cansearch="true"/>
            <fieldbrowser entitylink="servicotecnico" visible="false" cansearch="false" fielddetaillookup="{'descricao': 'Desrição', 'itemfaturamento':'Item Faturamento'}" />
            <fieldbrowser entitylink="servicocoringa" visible="false" cansearch="false"/>
            <fieldbrowser entitylink="servicoexterno" visible="false" cansearch="false"/>
            <fieldbrowser entitylink="servicoprestadoraacionada" visible="false" cansearch="false"/>
            <fieldbrowser entitylink="itemfaturamento" visible="false" cansearch="false" fielddetaillookup="{'descricaoservico':'Item de Faturamento'}"/>
        </fieldsbrowser>
        <emptybuiltin gender="m"></emptybuiltin>
    </viewbrowser>
    <forms>
      <form name="default" label="Serviço">
          <layout>
              <headerform>
                  <row>
                      <cell  colspan="12" controltype="textedit" entitylink="nome" label="Nome">
                          <validates>
                              <validate type="vnull" displaytext="O campo nome não pode ser vazio."/>
                          </validates>
                      </cell>
                  </row>
                  <row>
                      <cell  colspan="12" controltype="textedit" entitylink="codigo" label="Código">
                          <validates>
                              <validate type="maxlength" value="10" displaytext="O campo código não pode ter mais do que 5 caracteres."/>
                          </validates>                          
                      </cell>
                  </row>
                  <row>
                      <cell  colspan="12" controltype="textarea" entitylink="descricao" label="Descrição"/>
                  </row>
                  <row>
                      <cell label="Permitir informar a descrição do serviço na inclusão do pedido do Atendimento Comercial" colspan="12" controltype="checkbox" entitylink="servicocoringa"/>
                  </row>
                  <row>
                      <!-- realização do serviço -->
                      <cell label="Serviço externo" colspan="6" controltype="checkbox" entitylink="servicoexterno"/>
                      <cell label="Serviço com Prestadora acionada" colspan="6" controltype="checkbox" entitylink="servicoprestadoraacionada"/>
                  </row>
                  <row>
                    <cell label="Item de Faturamento" entitylink="itemfaturamento" controltype="lookup" fielddetaillookup="{'descricaoservico':'Item de Faturamento'}" amountfieldslookup="1" colspan="6"></cell> 
                  </row>
              </headerform>
          </layout>
      </form>
    </forms>
    <actions>
        <action>
            <name>Retrieve</name>
        </action>
        <action successMsg="O Serviço foi criado com sucesso!" failMsg="Ocorreu um erro ao criar o Serviço!">
            <name>Insert</name>
            <api>
                <name>ComposicaoNovo_v5</name>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="descricao" valueentity="descricao"/>
                <fromto valueapi="codigo" valueentity ="codigo"/>
                <fromto valueapi="created_by" valueentity ="logged_user"/>
                <fromto valueapi="tenant" valueentity ="tenant"/>
                <fromto valueapi="servicotecnico" valueentity ="servicotecnico"/>
                <fromto valueapi="funcoes" valueentity ="funcoes"/>
                <fromto valueapi="familias" valueentity ="familias"/>
                <fromto valueapi="grupoempresarial" valueentity ="id_grupoempresarial"/>
                <fromto valueapi="servicocoringa" valueentity ="servicocoringa"/>
                <fromto valueapi="servicoexterno" valueentity ="servicoexterno"/>
                <fromto valueapi="servicoprestadoraacionada" valueentity ="servicoprestadoraacionada"/>
                <fromto valueapi="itemfaturamento" valueentity ="itemfaturamento"/>
            </api>
        </action>
        <action successMsg="O Serviço foi editado com sucesso!" failMsg="Ocorreu um erro ao editar o Serviço!">
            <name>Update</name>
            <api>
                <name>ComposicaoAlterar_v5</name>
                <fromto valueapi="composicao" valueentity="composicao"/>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="descricao" valueentity="descricao"/>
                <fromto valueapi="codigo" valueentity ="codigo"/>
                <fromto valueapi="updated_by" valueentity ="logged_user"/>
                <fromto valueapi="tenant" valueentity ="tenant"/>
                <fromto valueapi="servicotecnico" valueentity ="servicotecnico"/>
                <fromto valueapi="funcoes" valueentity ="funcoes"/>
                <fromto valueapi="familias" valueentity ="familias"/>
                <fromto valueapi="grupoempresarial" valueentity ="id_grupoempresarial"/>
                <fromto valueapi="servicocoringa" valueentity ="servicocoringa"/>
                <fromto valueapi="servicoexterno" valueentity ="servicoexterno"/>
                <fromto valueapi="servicoprestadoraacionada" valueentity ="servicoprestadoraacionada"/>
                <fromto valueapi="itemfaturamento" valueentity ="itemfaturamento"/>
            </api>
        </action>
    </actions>
</nsjusecase>
