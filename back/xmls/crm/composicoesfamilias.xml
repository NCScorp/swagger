<?xml version="1.0" encoding="UTF-8"?>
<nsjusecase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../vendor/nasajon/mdatransformer/schemas/nsjusecase.xsd" name="composicoesfamilias" label="composicoesfamilias" project="crm" orphan="false">
    <entity schema="crm" table="composicoesfamilias">
        <fieldmodel name="composicaofamilia" datatype="guid" isid="true" column="composicaofamilia"/>
        <fieldmodel name="composicao" datatype="string" column="composicao"/>
        <fieldmodel name="familia" datatype="string" column="familia"  useCaseLink="estoque\familias" entityJoinType="left"/>
        <fieldmodel name="quantidade" datatype="integer" column="quantidade"/>
        <fieldmodel name="created_at" datatype="datetime" column="created_at"/>
        <fieldmodel name="created_by" datatype="json" column="created_by"/>
        <fieldmodel name="tenant" datatype="integer" column="tenant"/>
    </entity>
    <constructors>
      <constructoritem required="true">tenant</constructoritem>
      <constructoritem required="true">composicao</constructoritem>
    </constructors>
    <viewbrowser paginate="true" layout="list" target="window" label="Composição">
        <fieldsbrowser>
            <fieldbrowser entitylink="composicaofamilia" visible="false" isid="true"/>
            <fieldbrowser entitylink="composicao" visible="false" cansearch="false"/>
            <fieldbrowser alias="Família de produto" entitylink="familia"  visible="true" fielddetaillookup="{'codigo': 'Código', 'descricao':'Descrição', 'valor':'Valor Base'}"/>
            <fieldbrowser alias="Quantidade" entitylink="quantidade" visible="true"/>
        </fieldsbrowser>
    </viewbrowser>
    <forms>
      <form name="default" label="Vincular composição à família de produtos">
          <layout>
              <headerform>
                  <row>
                      <cell name="familia" controltype="lookup" label="Família de produto" colspan="6" entitylink="familia" fielddetaillookup="{'codigo':'Código', 'descricao':'Descrição', 'valor':'Valor Base'}" amountfieldslookup="3">
                          <validates>
                              <validate type="vnull" displaytext="O campo família de produtos não pode ser vazio."/>
                              <validate type="unique" displaytext="O campo família de produtos não pode ter produtos repetidos."/>
                          </validates>
                      </cell>
                  </row>
                  <row>
                      <cell controltype="number" label="Quantidade" colspan="12" entitylink="quantidade">
                          <validates>
                              <validate type="greaterthanorequal" value="1" displaytext="A quantidade deve ser maior que 0."/>
                              <validate type="vnull" displaytext="A quantidade não pode ser vazia."/>
                          </validates>
                      </cell>
                  </row>
              </headerform>
          </layout>
      </form>
    </forms>
    <actions>
        <action>
            <name>Insert</name>
            <api>
                <name>ComposicaoFamiliaNovo</name>
                <fromto valueapi="composicao" valueentity="composicao"/>
                <fromto valueapi="familia" valueentity="familia"/>
                <fromto valueapi="quantidade" valueentity="quantidade"/>
                <fromto valueapi="created_by" valueentity ="logged_user"/>
                <fromto valueapi="tenant" valueentity ="tenant"/>
            </api>
        </action>
        <action>
            <name>Delete</name>
            <api>
                <name>ComposicaoFamiliaExcluir</name>
                <fromto valueapi="composicaofamilia" valueentity="composicaofamilia"/>
                <fromto valueapi="tenant" valueentity ="tenant"/>
            </api>
        </action>
    </actions>
</nsjusecase>



