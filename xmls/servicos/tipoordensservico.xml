            </headerform>
        </layout>
    </viewedit>
    <actions>
        <action>
            <name>Insert</name>
            <api>
                <name>tipoOrdemServicoNovo</name>
                <fromto valueapi="descricao" valueentity="descricao" />
                <fromto valueapi="tenant" valueentity="tenant" />
            </api>
        </action>
        <action>
            <name>Update</name>
            <api>
                <name>tipoOrdemServicoAlterar</name>
                <fromto valueapi="tipoordemservico" valueentity="tipoordemservico" />
                <fromto valueapi="descricao" valueentity="descricao" />
                <fromto valueapi="tenant" valueentity="tenant" />
            </api>
        </action>
        <action>
            <name>Delete</name>
            <api>
                <name>tipoOrdemServicoExcluir</name>
                <fromto valueapi="tipoordemservico" valueentity="tipoordemservico" />
                <fromto valueapi="tenant" valueentity="tenant" />
            </api>
        </action>
    </actions>
</nsjusecase>