        <fieldmodel name="tenant" datatype="integer" column="tenant" />
    </entity> 
    <constructors>
        <constructoritem required="true">tenant</constructoritem>
    </constructors>
    <viewbrowser layout="table" paginate="true"  target="builtin" label="Tipos de ordens de serviço">
