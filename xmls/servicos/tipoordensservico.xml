        </fieldsbrowser>
    </viewbrowser>
    <viewedit mode="edit" label="Tipo de ordens de serviço">
        <layout>
            <headerform>
                <row>
                    <cell name="descricao" entitylink="descricao" controltype="textedit" colspan="8" />
