                        <select id="USUARIO_SEM_EQUIPE_PODE_ACESSAR_CHAMADOS_CLIENTES" name="USUARIO_SEM_EQUIPE_PODE_ACESSAR_CHAMADOS_CLIENTES" required="required" ng-model="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.USUARIO_SEM_EQUIPE_PODE_ACESSAR_CHAMADOS_CLIENTES" ng-disabled="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.submitting" class="form-control" style="">
