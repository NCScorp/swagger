        <div class="forms">
            <div class="row" style="display: flex; flex-wrap: wrap; align-items: center;"> 
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label class="control-label required" for="DISPONIBILIZAR_ARQUIVOS">Disponibilizar a funcionalidade de Arquivos</label>
                        
                        <select id="DISPONIBILIZAR_ARQUIVOS" name="DISPONIBILIZAR_ARQUIVOS" required="required" ng-model="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.DISPONIBILIZAR_ARQUIVOS" ng-disabled="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.submitting" class="form-control" style="">
                            <option value="1">Sim</option>
                            <option value="0">Não</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label class="control-label required" for="ARQUIVOS_DOWNLOADS_SUPORTE_ATIVO">Impedir o acesso de clientes bloqueados na área de downloads</label>
                        
                        <select id="ARQUIVOS_DOWNLOADS_SUPORTE_ATIVO" name="ARQUIVOS_DOWNLOADS_SUPORTE_ATIVO" required="required" ng-model="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.ARQUIVOS_DOWNLOADS_SUPORTE_ATIVO" ng-disabled="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.submitting" class="form-control" style="">
                            <option value="0">Não</option>
                            <option value="1">Sim</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label class="control-label required" for="USUARIO_SEM_CLIENTE_CRIAR_CHAMADO">Usuário sem cliente associado pode criar chamado</label>
                        
                        <select id="USUARIO_SEM_CLIENTE_CRIAR_CHAMADO" name="USUARIO_SEM_CLIENTE_CRIAR_CHAMADO" required="required" ng-model="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.USUARIO_SEM_CLIENTE_CRIAR_CHAMADO" ng-disabled="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.submitting" class="form-control" style="">
                            <option value="1">Sim</option>
                            <option value="0">Não</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                        <label class="control-label required" for="CHAMADOS_VISIVELCLIENTE_PADRAO">Chamado é visível para o cliente por padrão</label>
                        
                        <select id="CHAMADOS_VISIVELCLIENTE_PADRAO" name="CHAMADOS_VISIVELCLIENTE_PADRAO" required="required" ng-model="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.CHAMADOS_VISIVELCLIENTE_PADRAO" ng-disabled="tndmnt_dmn_cnfgrcs_prtl_frm_cntrllr.entity.submitting" class="form-control" style="">
                            <option value="1">Sim</option>
                            <option value="0">Não</option>
                        </select>
                    </div>
                </div>
